# HMH Content Management System - Backend Configuration

# API Configuration
PROJECT_NAME="HMH Content Management System"
VERSION="1.0.0"
API_V1_STR="/api/v1"
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Database Configuration
# SQLite (development)
DATABASE_URL="sqlite:///./content.db"

# PostgreSQL (production)
# DATABASE_URL="postgresql://user:password@localhost:5432/content_db"

# MySQL (alternative)
# DATABASE_URL="mysql+pymysql://user:password@localhost:3306/content_db"

DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Security
# Generate with: openssl rand -hex 32
SECRET_KEY="CHANGE_ME_IN_PRODUCTION_USE_OPENSSL_RAND_HEX_32"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# File Paths (relative to backend directory)
KNOWLEDGE_BASE_PATH="../reference/hmh-knowledge"
CURRICULUM_CONFIG_PATH="../config/curriculum"
CONTENT_PATH="../"

# Search Configuration
SEARCH_INDEX_PATH="./search_index"
SEARCH_MAX_RESULTS=50

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_ENABLED=true

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# Initial Admin User
FIRST_SUPERUSER_EMAIL="admin@hmhco.com"
FIRST_SUPERUSER_PASSWORD="changeme"

# Professor Framework Integration (optional)
PROFESSOR_ENABLED=false
PROFESSOR_API_URL=""
PROFESSOR_API_KEY=""

# Claude AI API Integration
# Get your API key from: https://console.anthropic.com/
# Required for real agent execution and AI-powered workflows
ANTHROPIC_API_KEY=""

# Git Integration
GIT_ENABLED=true
GIT_AUTO_COMMIT=false
GIT_COMMIT_USER_NAME="HMH CMS"
GIT_COMMIT_USER_EMAIL="cms@hmhco.com"

# File Upload
MAX_UPLOAD_SIZE_MB=50
ALLOWED_FILE_EXTENSIONS=[".md", ".json", ".pdf", ".docx", ".png", ".jpg", ".jpeg", ".svg"]

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
